<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestXamarin.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="numberPicker" VerticalOptions="Center" Margin="50,150,50,0" FontSize="18" Title="Выберите Гос. номер автомобиля" SelectedIndexChanged ="numberPicker_SelectedIndexChanged"/>
            <Button x:Name="dayButton" Text="Начать день" VerticalOptions="Center" Margin="50,50,50,0" FontSize="14" Clicked="ButtonDay_Clicked" />
            <Button x:Name="dinnerButton" Text="Начать обед" VerticalOptions="Center" Margin="50,0,50,0" FontSize="14" Clicked="ButtonDinner_Clicked" />
            <Entry x:Name="runStartEntry" VerticalOptions="Center" Margin="50,50,50,0" FontSize="18" Placeholder="Пробег на начало дня" Keyboard="Numeric" />
            <Entry x:Name="runEndEntry" VerticalOptions="Center" Margin="50,0,50,0" FontSize="18" Placeholder="Пробег на конец дня" Keyboard="Numeric"/>
            <Button x:Name="sendbutton" Text="Отправить данные" VerticalOptions="Center" Margin="50,50,50,0" FontSize="20" Clicked="ButtonSend_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>